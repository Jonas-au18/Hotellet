@model DinnerPlan
@{
    ViewData["Title"] = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <center>
        <label asp-for="Day">Enter day</label>
        <input class="form-control  w3-input-border w3-animate-input" style="width:135px" asp-for="Day" class="form-control" />
        <label asp-for="Month">Enter month</label>
        <input class="form-control  w3-input-border w3-animate-input" style="width:135px" asp-for="Month" class="form-control" />
        <br />
        <input href="#" class="w3-btn w3-light-grey w3-hover-green w3-round" type="submit" />
        <input onclick="refresh()" value="Refresh" class="w3-btn w3-light-grey w3-hover-green w3-round" />
    </center>
</form>


<br />
<table class="table border-bottom">
    <thead>
        <tr>
            <th>Expected total</th>
            <th>Expected adults</th>
            <th>Expected Kids</th>
            <th>Checked in total</th>
            <th>Expected adults</th>
            <th>Expected Kids</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td style="text-align: center">
                @Html.DisplayFor(model => Model.ExpectedTotal)
            </td>
            <td style="text-align: center">
                @Html.DisplayFor(model => model.ExpectedAdults)
            </td>
            <td style="text-align: center">
                @Html.DisplayFor(model => model.ExpectedKids)
            </td>
            <td style="text-align: center">
                @Html.DisplayFor(model => model.CheckedInTotal)
            </td>
            <td style="text-align: center">
                @Html.DisplayFor(model => model.CheckedInAdults)
            </td>
            <td style="text-align: center">
                @Html.DisplayFor(model => model.CheckedInKids)
            </td>
        </tr>
    </tbody>
</table>

<script>
    function refresh() {
        window.location.reload()
    }
</script>